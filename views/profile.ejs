<%- include('parts/header')%>
<%- include('parts/navbar')%>

        <div class="container">
            <div class="row">
                <div class="col col-12 col-md-4">
                    <img src="/<%=img%>" >
                </div>
                <div class="col col-12 col-md-6">
                    <h3><%=userName%></h3>
                    <%if(!isOwner){%>
                        <form method="POST" id="friends-form">
                            <input id="myName" type="hidden" name="myName"  value="<%=my.username%>">
                            <input id="myImg" type="hidden" name="myImg"   value="<%=my.img%>">
                            <input id="myId" type="hidden" name="myId"    value="<%=my.id%>">
                            <input id="hisName" type="hidden" name="hisName" value="<%=his.username%>">
                            <input id="hisImg" type="hidden" name="hisImg"  value="<%=his.img%>">
                            <input id="hisId" type="hidden" name="hisId"   value="<%=his._id%>">
                            <%if(isFriend){%>
                                <input id="deleteBtn" type="submit" value="Delete friend" class="btn btn-danger" formaction="/friend/delete">
                            <%}else if(isRequested){%>
                                <input id="acceptBtn" type="submit" value="Accept" class="btn btn-success" formaction="/friend/accept">
                                <input id="rejectBtn" type="submit" value="Reject" class="btn btn-success" formaction="/friend/reject">
                            <%}else if(isRequesting){%>
                                <input id="cancelRequest" type="submit" value="Cancel request" class="btn btn-primary" formaction="/friend/cancel">
                            <%}else{%>
                                <input id="addFriendBtn" type="submit" value="Add" class="btn btn-success" formaction="/friend/add">
                            <%}%>
                        </form>
                    <%}%>
                </div>
            </div>
        </div>

    <%- include('parts/scripts')%>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/socket/init.js"></script>
    <%if(!isOwner){%>
        <script id="notFriends" src="/js/socket/notFriends.js"></script>
    <%}%>
    </body>
</html>